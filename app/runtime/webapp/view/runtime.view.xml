<mvc:View
    controllerName="runtime.controller.runtime"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        
        <!-- Option 2: Alternative using HBox layout -->
        
        <HBox width="100%" height="100%">
            <VBox width="25%" >
                <Toolbar>
                    <Title text="Context Tree" />
                </Toolbar>
                <Toolbar>
                    <Title text="Task Tree" />
                </Toolbar>
            </VBox>
            
            <VBox width="50%" >
                <Toolbar>
                    <Title text="Content" />
                </Toolbar>
            </VBox>
            
            <VBox width="25%" >
                <Toolbar>
                    <Title text="Details" />
                </Toolbar>
            </VBox>
        </HBox>
    </Page>
</mvc:View>
