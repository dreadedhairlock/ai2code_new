<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox height="50%">
        <Toolbar>
            <Title text="Context Tree" />
            <ToolbarSpacer />
            <Button
                icon="sap-icon://add"
                tooltip="Create"
                press=".onCreateCNData"
            />
            <Button
                icon="sap-icon://delete"
                tooltip="Delete"
                type="Reject"
                press=".onDeleteCNData"
            />
        </Toolbar>
        <ScrollContainer
            height="90%"
            vertical="true"
            horizontal="false"
        >
            <Tree
                id="docTree"
                mode="SingleSelectMaster"
                items="{
          path: 'contextNodes>/nodes'
        }"
                itemPress=".onCNItemPress"
            >
                <StandardTreeItem
                    title="{contextNodes>label}"
                    type="Active"
                />
            </Tree>
        </ScrollContainer>
    </VBox>
</core:FragmentDefinition>
