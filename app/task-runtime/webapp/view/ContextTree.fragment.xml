<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox height="50%">
        <ScrollContainer
            height="90%"
            vertical="true"
            horizontal="false"
        >
            <Tree
                id="contextTree"
                mode="SingleSelectMaster"
                items="{
          path: 'contextNodes>/rootNodes',
          parameters:{numberOfExpandedLevels: 1}
        }"
                itemPress=".onCNItemPress"
            >
                <StandardTreeItem
                    title="{contextNodes>label}"
                    icon="{= ${contextNodes>isFolder} ? 'sap-icon://folder' : 'sap-icon://document-text' }"
                    type="Active"
                />
            </Tree>
        </ScrollContainer>
    </VBox>
</core:FragmentDefinition>
