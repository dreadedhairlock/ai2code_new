<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Toolbar>
        <Title text="Details" />
    </Toolbar>

    <!-- Use Flexible Box Layout for better control -->
    <l:VerticalLayout width="90%">
        <!-- Chat Section - Fixed Height -->
        <l:VerticalLayout
            width="100%"
            class="topSection"
        >
            <Toolbar>
                <content>
                    <Title
                        text="AI Chat"
                        level="H4"
                        class="aiChatTitle"
                    />
                    <ToolbarSpacer />
                    <Button
                        icon="sap-icon://history"
                        tooltip="Chat History"
                        class="chatHistoryButton"
                        press="onHistoryPress"
                    />
                </content>
            </Toolbar>

            <!-- Chat Messages - Scrollable Area -->
            <ScrollContainer
                id="chatMessagesContainer"
                width="100%"
                height="calc(100% - 80px)"
                class="chatMessagesArea"
                vertical="true"
            >
                <VBox
                    id="chatMessagesBox"
                    class="chatMessages"
                >
                    <!-- Chat messages will be added here dynamically -->
                </VBox>
            </ScrollContainer>

            <!-- Input Box - Fixed at Bottom of Chat Section -->
            <HBox
                class="chatInputBox"
                width="100%"
                alignItems="Center"
                renderType="Bare"
                fitContainer="true"
            >
                <Input
                    id="chatInput"
                    class="chatInput"
                    placeholder="Type your question here.."
                    submit="onSubmitQuery"
                    width="100%"
                />
                <Button
                    icon="sap-icon://paper-plane"
                    type="Emphasized"
                    press="onSubmitQuery"
                    class="chatSendButton"
                />
            </HBox>
        </l:VerticalLayout>

        <!-- Bottom Section -->
        <l:VerticalLayout
            width="100%"
            class="bottomSection"
        >
            <Title
                text="Code Result"
                level="H4"
                class="codeResultTitle"
            />
            <ScrollContainer
                width="100%"
                height="calc(100% - 40px)"
                vertical="true"
            >
                <VBox
                    id="codeResultBox"
                    class="codeResults"
                >
                    <core:HTML
                        id="codeResultText"
                        class="codeResultContent"
                    />
                </VBox>
            </ScrollContainer>
        </l:VerticalLayout>
    </l:VerticalLayout>
</core:FragmentDefinition>
