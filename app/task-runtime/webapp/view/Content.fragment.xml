<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:forms="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Toolbar>
        <Title text="Content" />
        <ToolbarSpacer />
        <!-- your new button -->
        <Button
            text="Edit"
            icon="sap-icon://edit"
            press=".onEditContextPress"
            tooltip="Edit"
        />
    </Toolbar>

    <forms:SimpleForm
        editable="false"
        layout="ResponsiveGridLayout"
        id="ContextNodeForm"
        bindingContexts=""
    >
        <Label text="ID" />
        <Text text="{ID}" />

        <Label text="Label" />
        <Text text="{label}" />

        <Label text="Type" />
        <Text text="{type}" />

        <Label text="Value" />
        <Text text="{value}" />

        <Label text="Path" />
        <Text text="{path}" />
    </forms:SimpleForm>

    <forms:SimpleForm
        visible="false"
        editable="false"
        layout="ResponsiveGridLayout"
        id="BotInstanceForm"
    >
        <Label text="ID" />
        <Text text="{ID}" />

        <Label text="Result" />
        <Text text="{result}" />
    </forms:SimpleForm>
</core:FragmentDefinition>
