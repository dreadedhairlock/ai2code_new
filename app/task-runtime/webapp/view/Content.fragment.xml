<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:forms="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <forms:SimpleForm
        editable="false"
        layout="ResponsiveGridLayout"
        id="ContextNodeForm"
        bindingContexts=""
    >
        <Label text="ID" />
        <Text text="{ID}" />

        <Label text="Label" />
        <Text text="{label}" />

        <Label text="Type" />
        <Text text="{type}" />

        <Label text="Value" />
        <Text text="{value}" />

        <Label text="Path" />
        <Text text="{path}" />
    </forms:SimpleForm>
</core:FragmentDefinition>
