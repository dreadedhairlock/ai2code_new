<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox height="50%">
        <Toolbar>
            <Title text="Task Tree" />
            <ToolbarSpacer />
            <Button
                icon="sap-icon://add"
                tooltip="Create"
                press=".onCreateSubTask"
            />
            <Button
                icon="sap-icon://add"
                tooltip="Create Bot"
                press=".onCreateBotInstance"
                type="Emphasized"
            />
            <Button
                icon="sap-icon://edit"
                tooltip="Edit"
                press=".onEditSubTask"
            />
            <Button
                icon="sap-icon://delete"
                tooltip="Delete"
                type="Reject"
                press=".onDeleteSubTask"
            />
        </Toolbar>
        <ScrollContainer
            height="90%"
            vertical="true"
            horizontal="false"
        >
            <Tree
                id="tree"
                mode="SingleSelectMaster"
                items="{path: 'taskTree>/'}"
                itemPress=".onTaskSelect"
                selectionChange=".onTaskSelect"
            >
                <StandardTreeItem
                    title="{=
    ${taskTree>type}
    + ' : '
    + ( ${taskTree>name}
        ? ${taskTree>name}
        : ${taskTree>ID}
      )
  }"
                />
            </Tree>
        </ScrollContainer>
    </VBox>
</core:FragmentDefinition>
