<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox height="50%">
        <ScrollContainer
            height="90%"
            vertical="true"
            horizontal="false"
        >
            <Tree
                id="taskAndBotTree"
                mode="SingleSelectMaster"
                items="{path: 'taskTree>/'}"
                itemPress=".onTaskSelect"
                selectionChange=".onTaskSelect"
            >
                <StandardTreeItem
                    title="{= ${taskTree>type} === 'bot' 
            ? 'Bot : ' + (${taskTree>botTypeName} ? ${taskTree>botTypeName} + ' #' + ${taskTree>sequence} : 'Bot #' + ${taskTree>sequence})
            : ${taskTree>type} + ' : ' + (${taskTree>name} ? ${taskTree>name} : ${taskTree>ID})}"
                />
            </Tree>
        </ScrollContainer>
    </VBox>
</core:FragmentDefinition>
