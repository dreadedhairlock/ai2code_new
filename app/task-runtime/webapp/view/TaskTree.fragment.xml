<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox height="50%">
        <Toolbar>
            <Title text="Task Tree" />
        </Toolbar>
        <ScrollContainer height="100%" vertical="true" horizontal="false">
            <List
                id="TasksList"
                mode="SingleSelectMaster"
                items="{ path: '/Tasks' }"
                itemPress=".onTasksSelect"
                selectionChange=".onTasksSelect"
                growing="true"
                growingThreshold="50"
            >
                <StandardListItem title="{ID}" type="Active" />
            </List>
        </ScrollContainer>
    </VBox>
</core:FragmentDefinition>
