<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox height="50%">
        <ScrollContainer
            height="90%"
            vertical="true"
            horizontal="false"
        >
            <Tree
                id="taskAndBotTree"
                mode="SingleSelectMaster"
                items="{path: 'taskAndBotTree>/rootNodes', parameters: {arrayNames: ['nodes']}}"
                itemPress=".onTaskAndBotPress"
                selectionChange=".onTaskAndBotPress"
                toggleOpenState=".onToggleOpenState"
            >
                <StandardTreeItem title="{taskAndBotTree>name}" />
            </Tree>
        </ScrollContainer>
    </VBox>
</core:FragmentDefinition>
